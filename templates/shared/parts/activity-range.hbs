<fieldset {{ disabled disabled.range }}>
	<legend>{{ localize "BF.RANGE.FIELDS.range.label" }}</legend>
	<div class="range field-group">
		<span>{{ localize "BF.RANGE.Label" }}</span>
		{{#if range.scalar}}
			<label>
				<span>{{ localize "BF.RANGE.FIELDS.range.value.label" }}</span>
				<input type="text" name="{{ prefix }}range.value" value="{{ data.range.value }}">
			</label>
		{{/if}}
		<label>
			<span>{{ localize "BF.RANGE.FIELDS.range.units.label" }}</span>
			<select name="{{ prefix }}range.units">
				{{ selectOptions rangeOptions selected=data.range.units }}
			</select>
		</label>
	</div>
	{{#if range.units}}
		<label>
			<span>{{ localize "BF.RANGE.FIELDS.range.special.label" }}</span>
			<input type="text" name="{{ prefix }}range.special" value="{{ data.range.special }}">
		</label>
	{{/if}}
</fieldset>
