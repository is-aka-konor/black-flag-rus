<form class="{{cssClass}} drop-target" autocomplete="off">
	{{> journalEntryPageHeader}}

	<fieldset class="drop-area">
		<legend>{{localize "BF.Item.Type.Class[one]"}}</legend>
		<label>
			<span>{{localize "BF.JournalPage.Class.Item.Label"}}</span>
			{{#if document.system.item}}
				<div class="item" data-item-uuid="{{document.system.item}}" data-item-type="class">
					{{{blackFlag-linkForUUID document.system.item}}}
					<a data-action="delete"><i class="fa-solid fa-trash"></i></a>
				</div>
			{{else}}
				<p class="drop hint">
					{{localize "BF.JournalPage.Class.Item.Hint"}}
				</p>
			{{/if}}
		</label>
		<label>
			<span>
				{{localize "BF.JournalPage.Class.Introduction.Label"}}
				<i class="hintIcon" data-tooltip="BF.JournalPage.Class.Introduction.Hint"></i>
			</span>
			<button type="button" data-action="launch-text-editor" data-target="system.description.introduction">
				<i class="fa-solid fa-edit"></i> {{localize "BF.JournalPage.Edit"}}
			</button>
		</label>
	</fieldset>

	<fieldset>
		<legend>{{localize "BF.JournalPage.Class.AdditionalDescriptions.Label"}}</legend>
		<label>
			<span>
				{{localize "BF.HitPoint.Label[other]"}}
				<i class="hintIcon" data-tooltip="BF.JournalPage.Class.HitPoints.Hint"></i>
			</span>
			<button type="button" data-action="launch-text-editor" data-target="system.description.additionalHitPoints">
				<i class="fa-solid fa-edit"></i> {{localize "BF.JournalPage.Edit"}}
			</button>
		</label>
		<label>
			<span>
				{{localize "BF.Proficiency.Label[other]"}}
				<i class="hintIcon" data-tooltip="BF.JournalPage.Class.Traits.Hint"></i>
			</span>
			<button type="button" data-action="launch-text-editor" data-target="system.description.additionalTraits">
				<i class="fa-solid fa-edit"></i> {{localize "BF.JournalPage.Edit"}}
			</button>
		</label>
		<label>
			<span>
				{{localize "BF.JournalPage.Class.Equipment.Header"}}
				<i class="hintIcon" data-tooltip="BF.JournalPage.Class.Equipment.Hint"></i>
			</span>
			<button type="button" data-action="launch-text-editor" data-target="system.description.additionalEquipment">
				<i class="fa-solid fa-edit"></i> {{localize "BF.JournalPage.Edit"}}
			</button>
		</label>
	</fieldset>

	<fieldset>
		<legend>{{localize "BF.Item.Type.Subclass[other]"}}</legend>
		<label>
			<span>
				{{localize "BF.JournalPage.Class.Subclass.AdvancementDescription.Label"}}
				<i class="hintIcon" data-tooltip="BF.JournalPage.Class.Subclass.AdvancementDescription.Hint"></i>
			</span>
			<button type="button" data-action="launch-text-editor" data-target="system.description.subclassAdvancement">
				<i class="fa-solid fa-edit"></i> {{localize "BF.JournalPage.Edit"}}
			</button>
		</label>
		<label>
			<span>
				{{localize "BF.JournalPage.Class.Subclass.SectionDescription.Label"}}
				<i class="hintIcon" data-tooltip="BF.JournalPage.Class.Subclass.SectionDescription.Hint"></i>
			</span>
			<button type="button" data-action="launch-text-editor" data-target="system.description.subclassSection">
				<i class="fa-solid fa-edit"></i> {{localize "BF.JournalPage.Edit"}}
			</button>
		</label>
		<ol class="items-list">
			{{#each system.subclasses}}
				<li class="item" data-item-uuid="{{this}}" data-item-type="subclass">
					<div class="item-name">{{{blackFlag-linkForUUID this}}}</div>
					<div class="item-controls"><a data-action="delete"><i class="fa-solid fa-trash"></i></a></div>
				</li>
			{{/each}}
		</ol>
	</fieldset>
</form>
