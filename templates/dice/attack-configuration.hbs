<fieldset>
	<legend>{{ localize "BF.Roll.Configuration.LabelGeneric" }}</legend>
	{{#if options.attackModes}}
		<label>
			<span>{{ localize "BF.ATTACK.Mode.Label" }}</span>
			<select name="attackMode">
				{{ selectOptions options.attackModes selected=config.attackMode }}
			</select>
		</label>
	{{/if}}
	<label>
		<span>{{ localize "BF.Roll.Mode.Label" }}</span>
		<select name="rollMode">
			{{ selectOptions rollModesOptions selected=rollMode localize=true }}
		</select>
	</label>
</fieldset>
