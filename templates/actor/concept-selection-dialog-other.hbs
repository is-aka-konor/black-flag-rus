<div class="{{ type }}">
	{{#each choices}}
		<section class="option" data-uuid="{{ this.document.uuid }}">
			<figure class="poster">
				<img src="{{ document.img }}">
				<button type="button" class="light-button" data-action="choose">
					{{ localize "BF.Action.Choose.Generic" }}
				</button>
				<div class="window-mask" inert></div>
			</figure>
			<div class="info">
				<header>
					<div class="name">{{ document.name }}</div>
					<div class="source">{{ system.description.source.label }}</div>
				</header>
				<div class="description">
					{{{ enriched.description }}}
					{{#if this.system.description.journal}}
						<p>
							<a class="content-link" data-link="{{ system.description.journal }}"
							   data-uuid="{{ system.description.journal }}">
								<i class="fa-solid fa-book-open" inert></i>
								{{ localize "BF.Journal.Link.MoreInformation" }}
							</a>
						</p>
					{{/if}}
				</div>
			</div>
		</section>
	{{else}}
		<section class="empty">
			<p>{{ localize "BF.ConceptSelection.NoOptions" type=typeName typePlural=typeNamePlural }}</p>
		</section>
	{{/each}}
</div>
