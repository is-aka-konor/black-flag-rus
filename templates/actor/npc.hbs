<form class="sheet-container" id="{{ appID }}-main-form">
	<header class="sheet-head">
		<h1>
			<input name="name" type="text" value="{{ actor.name }}" placeholder="{{ localize 'Name' }}"
			       form="{{ appID }}-main-form" {{ disabled (not modes.editing) }}>
		</h1>
		<label data-tooltip="{{ localize 'BF.ExperiencePoints.LabelSpecific' value=system.xpValue }}<br>
			     {{ blackFlag-number system.attributes.proficiency sign=true }}"
		       data-tooltip-direction="RIGHT">
			<span>{{ localize "BF.ChallengeRating.Abbreviation" }}</span>
			<input type="text" name="system.attributes.cr" value="{{ cr }}" {{disabled (not modes.editing)}}>
		</label>
	</header>

	<nav class="sheet-navigation tabs" data-group="primary">
		<a data-tab="main">
			{{ localize "BF.Sheet.Tab.Main" }}
			{{ blackFlag-notificationBadge actor section="main" }}
		</a>
		<a data-tab="features">
			{{ localize "BF.Sheet.Tab.Features" }}
			{{ blackFlag-notificationBadge actor section="features" }}
		</a>
		<a data-tab="biography">
			{{ localize "BF.Sheet.Tab.Biography" }}
			{{ blackFlag-notificationBadge actor section="biography" }}
		</a>
		<a data-tab="effects">
			{{ localize "BF.Sheet.Tab.Effects" }}
			{{ blackFlag-notificationBadge actor section="effects" }}
		</a>
	</nav>

	<div class="sheet-body">
		<div class="tab flex-tab" data-group="primary" data-tab="main">
			{{> "blackFlag.npc-main" }}
		</div>
		<div class="tab flex-tab" data-group="primary" data-tab="features">
			{{> "blackFlag.npc-features" }}
			{{> "blackFlag.currency" }}
		</div>
		<div class="tab flex-tab" data-group="primary" data-tab="biography">
			<section>
				<div class="artwork">
					<figure class="icon">
						<figcaption>{{ localize "BF.Actor.Artwork.Portrait" }}</figcaption>
						<img class="profile" src="{{ actor.img }}" title="{{ actor.name }}"
								 {{~#if modes.editing}} data-edit="img"{{/if}}>
					</figure>
					{{#if showTokenArtwork}}
						<figure class="icon">
							<figcaption>{{ localize "BF.Actor.Artwork.Token" }}</figcaption>
							{{#if actor.isToken}}
								<img class="profile" src="{{ actor.token.texture.src }}" title="{{ actor.name }}"
								 		{{~#if modes.editing}} data-edit="token.texture.src"{{/if}}>
							{{else}}
								<img class="profile" src="{{ actor.prototypeToken.texture.src }}" title="{{ actor.name }}"
								 		{{~#if modes.editing}} data-edit="prototypeToken.texture.src"{{/if}}>
							{{/if}}
						</figure>
					{{/if}}
				</div>
				{{ editor enriched.biography target="system.biography.value" button=false editable=modes.editing
				          engine="prosemirror" collaborate=false }}
			</section>
		</div>
		<div class="tab flex-tab" data-group="primary" data-tab="effects">
			{{> "blackFlag.actor-active-effects" }}
		</div>
	</div>
</div>
