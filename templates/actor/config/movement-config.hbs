<section>

	<fieldset>
		<legend>{{ localize "BF.MOVEMENT.FIELDS.traits.movement.label" }}</legend>
		{{#if showBase}}
			{{#blackFlag-formGroup "BF.MOVEMENT.FIELDS.traits.movement.base.label"
			                       hint=(localize "BF.MOVEMENT.FIELDS.traits.movement.base.hint")}}
				{{ formInput movement.fields.base value=movement.data.base localize=true rootId=partId }}
			{{/blackFlag-formGroup}}
		{{/if}}
		{{> blackFlag.fieldlist types }}
		{{ formField movement.fields.unit value=movement.data.unit options=CONFIG.distanceUnits.localizedOptions
		             localize=true rootId=partId }}
		<hr>
		{{ formField movement.fields.ignoredDifficultTerrain value=movement.data.ignoredDifficultTerrain
		             options=difficultTerrainTypes localize=true rootId=partId }}
	</fieldset>

	{{#if pace}}
		<fieldset>
			<legend>{{ localize "BF.MOVEMENT.FIELDS.traits.pace.label" }}</legend>
			{{#each pace.types}}
				{{ formField field name=name value=value label=label rootId=@root.partId }}
			{{/each}}
			{{ formField pace.fields.unit value=pace.data.unit options=CONFIG.paceUnits.localizedOptions
			             localize=true rootId=partId }}
		</fieldset>
	{{/if}}

	<fieldset>
		<legend>{{ localize "BF.MOVEMENT.FIELDS.traits.movement.tags.label" }}</legend>
		{{> "blackFlag.trait-list" choices=tagOptions prefix="system.traits.movement.tags" }}
	</fieldset>

	<fieldset>
		<legend>{{ localize "BF.MOVEMENT.FIELDS.traits.movement.custom.label" }}</legend>
		<ul class="configuration-list">
			{{#each movement.data.custom}}
				<li>
					<div class="item-name full-width">
						<input type="text" name="custom.{{ @index }}" value="{{ this }}">
					</div>
					<div class="item-controls">
						<button class="link-button" type="button" data-action="deleteCustom" data-index="{{ @index }}"
										data-tooltip="BF.MOVEMENT.Action.DeleteCustom"
										aria-label="{{ localize 'BF.MOVEMENT.Action.DeleteCustom' }}">
							<i class="fa-solid fa-trash" inert></i>
						</button>
					</div>
				</li>
			{{/each}}
			<li class="add-control">
				<button class="link-button" type="button" data-action="addCustom">
					<i class="fa-solid fa-plus" inert></i> {{ localize "BF.MOVEMENT.Action.AddCustom" }}
				</button>
			</li>
		</ul>
	</fieldset>

</section>
