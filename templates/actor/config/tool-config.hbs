{{#if tool}}
  <fieldset>
		<legend>{{ localize "BF.Proficiency.Label[one]" }}</legend>
		{{ formField tool.fields.proficiency.fields.multiplier options=proficiencyOptions
								 name=(concat tool.keyPath ".proficiency.multiplier")
								 value=tool.data.proficiency.multiplier label="BF.CHECK.Label[other]" localize=true
								 rootId=partId }}
	</fieldset>
{{else}}
	<fieldset>
		<legend>{{ localize (ifThen (eq trait "vehicles") "BF.VEHICLE.Listed" "BF.Tool.Listed") }}</legend>
		{{ formInput toolSelector.field value=toolSelector.value name="listed-tools" options=toolSelector.options }}
	</fieldseT>
  <!-- TODO: Global base tool proficiency -->
{{/if}}
