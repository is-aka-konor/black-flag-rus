<div class="{{ type }}">
	{{#each choices}}
		<section class="option" data-uuid="{{ document.uuid }}"
			{{~#if document.system.color}} style="--bf-item-color: {{ document.system.color }};"{{/if}}>
			{{> "blackFlag.concept-summary" item=document system=document.system enriched=enriched }}
			<button data-action="choose" class="light-button" {{ disabled multiclassMessage }}
							{{#if multiclassMessage}}data-tooltip="{{ multiclassMessage }}"{{/if}}>
				{{ localize "BF.Action.Choose.Specific" option=document.name }}
			</button>
		</section>
	{{else}}
		<section class="empty">
			<p>{{ localize "BF.ConceptSelection.NoOptions" type=typeName typePlural=typeNamePlural }}</p>
		</section>
	{{/each}}
</div>
