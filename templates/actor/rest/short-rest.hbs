<form class="dialog-content short-rest" autocomplete="off">
	<section class="main-form">
		<p>{{content}}</p>
	
		<fieldset class="hit-dice">
			<legend>{{localize "BF.HitDie.Label[other]"}}</legend>
			<label>
				<span>{{localize "BF.HitPoint.Damage.Label"}}</span>
				<span>{{blackFlag-number hp.damage}}</span>
			</label>
			{{#each hd.d as |hd denom|}}
				<label class="hit-die-roll">
					<span>d{{denom}} ({{localize "BF.HitDie.AvailableCount" number=(blackFlag-number hd.available)}})</span>
					<button data-action="roll-hit-die" data-denomination="{{denom}}" {{disabled (eq hd.available 0)}}>
						<blackFlag-icon class="die-icon"
							src="systems/black-flag/artwork/interface/dice/d{{denom}}.svg"></blackFlag-icon>
						{{localize "BF.Roll.Action.RollSpecific" type=(concat "d" denom)}}
					</button>
				</label>
			{{/each}}
		</fieldset>
	</section>

	<nav class="dialog-buttons">
		<ul>
			{{#each buttons as |button id|}}
				<li><button class="dialog-button" data-button="{{id}}">{{{button.icon}}} {{{button.label}}}</button></li>
			{{/each}}
		</ul>
	</nav>
</form>
