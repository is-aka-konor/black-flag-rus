<form class="sheet-container" autocomplete="off">
	<section class="slots">
		<h3>{{ localize "BF.Spellbook.Slots.New" }}</h3>
		<ul class="unlist spell-list news-slots">
			{{#each slots}}
				<li {{~#if selected}} class="selected"{{/if}}>
					<label>
						<figure class="icon">
							{{#if spell.img}}<img src="{{ spell.img }}">
							{{~else}}<div class="placeholder">{{ number }}</div>{{/if}}
						</figure>
						<div class="name">
							{{#if spell.name}}{{ spell.name }}{{else}}{{ localize name }}{{/if}}
						</div>
						<div class="control">
							<input type="radio" name="selected-slot" value="{{ @index }}" {{ checked selected }}>
						</div>
					</label>
				</li>
			{{/each}}
		</ul>
	</section>
	<div class="restrictions">
		{{#if restrictions.circle}}
			<div class="restriction">
				<strong>{{ localize "BF.Spell.Circle.Label" }}</strong>: {{ restrictions.circle }}
			</div>
		{{/if}}
		{{#if restrictions.ring}}
			<div class="restriction">
				<strong>{{ localize "BF.Spell.Ring.Label" }}</strong>: {{ restrictions.ring }}
			</div>
		{{/if}}
		{{#if restrictions.maxRing}}
			<div class="restriction">
				<strong>{{ localize "BF.Spell.Ring.Maximum" }}</strong>: {{ restrictions.maxRing }}
			</div>
		{{/if}}
		{{#if restrictions.schools}}
			<div class="restriction">
				<strong>{{ localize "BF.Spell.School.Label" }}</strong>: {{ restrictions.schools }}
			</div>
		{{/if}}
	</div>
	{{!--
	<search>
		search
	</search>
	--}}
	<section class="spells">
		<ul class="unlist spell-list">
			{{#each spells}}
				<li {{~#if selected}} class="selected"{{/if}}>
					<label>
						<figure class="icon"><img src="{{ img }}"></figure>
						<div class="name">{{ name }}</div>
						<div class="control">
							{{#if (ne @root.mode "all")}}
								<input type="radio" name="selected-spell" value="{{ uuid }}"
										 	{{ checked selected }} {{ disabled disabled }}>
							{{else}}
								<input type="checkbox" name="selected.{{ uuid }}" {{ checked selected }}>
							{{/if}}
						</div>
					</label>
				</li>
			{{else}}
				<li class="none-available">
					{{ localize "BF.Spellbook.NoneAvailable" }}
				</li>
			{{/each}}
		</ul>
	</section>
	<div class="controls">
		<button type="submit" class="heavy-button" data-action="learn">
			<i class="fa-solid fa-file-pen" inert></i>
			{{ localize "BF.Spellbook.Action.LearnSpells" }}
		</button>
	</div>
</form>
