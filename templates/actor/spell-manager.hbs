<div class="sheet-container">
	<section class="slots">
		<ul class="unlist">
			{{#each slots}}
				<li>
					<label>
						<figure class="icon">
							{{#if spell.icon}}<img src="{{ spell.icon }}">
							{{~else}}<div class="placeholder">{{ number }}</div>{{/if}}
						</figure>
						<div class="name">
							{{#if spell.name}}{{ spell.name }}{{else}}{{ localize name }}{{/if}}
						</div>
						<div class="control">
							<input type="radio" name="selected-slot" {{ checked selected }}>
						</div>
					</label>
				</li>
			{{/each}}
		</ul>
	</section>
	<section class="spells">
		<div class="restrictions">
			restrictions
		</div>
		<search>
			search
		</search>
		<ul>
			<li>spell</li>
		</ul>
	</section>
	<section class="details">
		details
	</section>
</div>
