<form autocomplete="off">
	<ol class="items-list large">
		{{#each system.progression.classes}}
			<li class="item" data-class="{{this.document.identifier}}">
				<div class="item-name">
					<figure class="icon">
						<img src="{{this.document.img}}">
					</figure>
					<span>{{this.document.name}}</span>
				</div>
				<div class="item-details">
					<span class="levels">{{this.levelsLabel}}</span>
					{{#with this.document.system.description.journal as |journalUUID|}}
						<a class="content-link" data-uuid="{{journalUUID}}">
							<i class="fa-solid fa-book-open"></i>
							{{localize "BF.Journal.Link.MoreInformation"}}
						</a>
					{{/with}}
				</div>
				<div class="item-controls">
					<button type="submit">{{localize "BF.Action.Choose.Generic"}}</button>
				</div>
			</li>
		{{/each}}
		<li class="item">
			<div class="item-name">
				<figure class="icon spacer">
					<img src="icons/magic/light/explosion-star-glow-silhouette.webp">
				</figure>
				<span>{{localize "BF.Progression.Action.Multiclass.Label"}}</span>
			</div>
			<div class="item-controls">
				<button type="submit">{{localize "BF.Action.Choose.Generic"}}</button>
			</div>
		</li>
	</ol>
</form>
