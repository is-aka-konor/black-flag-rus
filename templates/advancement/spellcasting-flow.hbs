<form id="{{ appId }}" class="advancement-entry" data-id="{{ advancement.id }}" data-type="{{ type }}"
  autocomplete="off" {{~#if accentColor}} style="--bf-item-color: {{ accentColor }};"{{/if}}>
	<header>
		{{> "blackFlag.advancement-name"}}
		{{#if showLearnSpells}}
			<div class="advancement-actions">
				<button type="submit" class="light-button" data-action="learn-spells">
					{{ localize "BF.Advancement.Spellcasting.Action.LearnSpells" }}
				</button>
			</div>
		{{else if showReplacement}}
			<div class="advancement-actions">
				<button type="submit" class="link-button" data-action="learn-spells">
					<i class="fa-solid fa-shuffle" inert></i>
					{{ localize "BF.Advancement.Spellcasting.Action.ReplaceSpell" }}
				</button>
			</div>
		{{/if}}
	</header>

	{{#if summary}}
		<div class="advancement-summary">{{{ summary }}}</div>
	{{/if}}
</form>
