<fieldset class="trait-options">
	<legend>{{ localize selectedTrait.header }}</legend>
	{{ formField selectedTrait.field name="selectedTrait" value=selectedTrait.value options=selectedTrait.options
	             rootId=partId }}
	{{#if choice.fields}}
		{{ formField choice.fields.count value=choice.data.count rootId=partId }}
	{{/if}}

	{{> "blackFlag.trait-list" choices=choice.options prefix="configuration.checked" }}

</fieldset>

