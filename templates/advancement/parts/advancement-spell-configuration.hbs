<label>
	<span>{{ localize "BF.Spell.Preparation.Label" }}</span>
	<select name="configuration.spell.mode">
		{{ selectOptions CONFIG.spellPreparationModes.localized selected=configuration.spell.mode }}
	</select>
</label>
{{#if alwaysPreparable}}
	<label class="full-checkbox">
		<span>{{ localize "BF.Spell.Preparation.AlwaysPrepared" }}</span>
		<input type="checkbox" name="configuration.spell.alwaysPrepared"
					 {{ checked configuration.spell.alwaysPrepared }}>
	</label>
{{/if}}
<label>
	<span>
		{{ localize "BF.Advancement.GrantSpells.Origin.Label" }}
		<i class="hintIcon" data-tooltip="BF.Advancement.GrantSpells.Origin.Hint"></i>
	</span>
	<select name="configuration.spell.origin">
		<option value=""></option>
		<optgroup label="{{ localize 'BF.Item.Type.Class[other]' }}">
			{{ selectOptions CONFIG.registration.all.class selected=configuration.spell.origin labelAttr="name" }}
		</optgroup>
		<optgroup label="{{ localize 'BF.Item.Type.Subclass[other]' }}">
			{{ selectOptions CONFIG.registration.all.subclass selected=configuration.spell.origin labelAttr="name" }}
		</optgroup>
	</select>
</label>
<label>
	<span>{{ localize "BF.Ability.Label[one]" }}</span>
	<multi-select name="configuration.spell.ability">
		{{#each abilities}}
			<option value="{{ @key }}" {{ selected }}>{{ label }}</option>
		{{/each}}
	</multi-select>
</label>
<label>
	<span>
		{{ localize "BF.Spell.Source.Label" }}
		<i class="hintIcon" data-tooltip="BF.Advancement.GrantSpells.Source.Hint"></i>
	</span>
	<select name="configuration.spell.source">
		{{ selectOptions CONFIG.spellSources.localized selected=configuration.spell.source blank="" }}
	</select>
</label>
