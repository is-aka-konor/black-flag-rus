<fieldset>
	<legend>{{ localize "BF.Advancement.GrantSpells.FIELDS.spell.label" }}</legend>
	{{ formField spell.fields.mode value=spell.data.mode options=CONFIG.spellPreparationModes.localizedOptions
	             rootId=partId }}
	{{#if spell.alwaysPreparable}}
		{{ formField spell.fields.alwaysPrepared value=spell.data.alwaysPrepared rootId=partId }}
	{{/if}}
	{{ formField spell.fields.origin value=spell.data.origin options=spell.originOptions classes="label-hinted"
	             rootId=partId }}
	{{ formField spell.fields.ability value=spell.data.ability options=CONFIG.abilities.localizedOptions rootId=partId }}
	{{ formField spell.fields.source value=spell.data.source options=CONFIG.spellSources.localizedOptions blank=""
	             classes="label-hinted" rootId=partId }}
</fieldset>
