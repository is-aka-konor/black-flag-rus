<fieldset>
	<legend>{{ localize "BF.Advancement.ChooseFeatures.FIELDS.restriction.label" }}</legend>
	{{ formField configuration.fields.restriction.fields.circle value=configuration.data.restriction.circle
	             options=spellCircleOptions rootId=partId }}
	{{#if (gt configuration.data.restriction.circle 0)}}
		{{ formField configuration.fields.restriction.fields.exactCircle value=configuration.data.restriction.exactCircle
		             classes="label-hinted" rootId=partId }}
	{{/if}}
	{{#unless (eq configuration.data.restriction.circle 0)}}
		{{ formField configuration.fields.restriction.fields.allowRituals value=configuration.data.restriction.allowRituals
		             options=ritualModeOptions localize=true rootId=partId }}
	{{/unless}}
	{{#if (or (eq configuration.data.restriction.circle -1) (and (gt configuration.data.restriction.circle 0) (not configuration.data.restriction.exactCircle)))}}
		{{ formField configuration.fields.restriction.fields.allowCantrips
		             value=configuration.data.restriction.allowCantrips
								 disabled=(eq configuration.data.restriction.allowRituals "only") rootId=partId }}
	{{/if}}
	{{ formField configuration.fields.restriction.fields.source value=configuration.data.restriction.source
	             options=CONFIG.spellSources.localizedOptions blank="" rootId=partId }}
</fieldset>
