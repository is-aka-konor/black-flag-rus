<section class="activities">
	<strong class="section-header">{{ localize "BF.CHATMESSAGE.Activities" }}</strong>
	<ul class="unlist">
		{{#each activities}}
			<li class="activity flexrow item-tooltip" data-activity-uuid="{{ uuid }}" data-item-uuid="{{ item.uuid }}">
				<img class="icon" src="{{ item.img }}" alt="{{ item.name }}">
				<button type="button" class="link-button" data-action="activate">
					<span class="name-stacked">
						<span class="title">{{ item.name }}</span>
						<span class="subtitle">{{ name }}</span>
					</span>
				</button>
			</li>
		{{/each}}
	</ul>
</section>
