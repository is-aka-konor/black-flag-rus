<blackFlag-advancement>
	<header>
		<h2>{{ localize "BF.Advancement.Label" }}</h2>
		{{#if editable}}
			<div class="controls">
				<button type="button" class="link-button" data-action="add"
				        data-tooltip="BF.Advancement.Core.Action.Create"
				        aria-label="{{ localize 'BF.Advancement.Core.Action.Create' }}">
					<i class="fa-solid fa-plus" inert></i>
				</button>
			</div>
		{{/if}}
	</header>
	<ol class="level-list unlist">
		{{#each advancement as |data level|}}
			<li class="advancement-level" data-level="{{ level }}">
				<div class="header">
					<h3>
						{{#if (eq level "unconfigured")}}
							{{ localize "BF.Advancement.Core.Level.None" }}
						{{else if (eq level "0")}}
							{{ localize "BF.Advancement.Core.Level.Any.Long" }}
						{{else}}
							{{ localize "BF.Level.Specific" level=level }}
						{{/if}}
					</h3>
				</div>
				<ol class="advancement-list unlist">
					{{#each data.items}}
						<li class="advancement-entry" data-advancement-id="{{ this.id }}">
							<div class="advancement-name">
								<figure class="icon">
									<img src="{{ this.icon }}">
								</figure>
								<h4>{{{ this.title }}}</h4>
							</div>
							<div class="class-restriction">
								{{#if (eq this.classRestriction "original")}}
									{{ localize "BF.Advancement.Core.ClassRestriction.Original" }}
								{{else if (eq this.classRestriction "multiclass")}}
									{{ localize "BF.Advancement.Core.ClassRestriction.Multiclass" }}
								{{/if}}
							</div>
							<div class="advancement-controls">
								{{#if @root.editable}}
									<button type="button" class="link-button" data-action="edit"
									        data-tooltip="BF.Advancement.Core.Action.Edit"
									        aria-label="{{ localize 'BF.Advancement.Core.Action.Edit' }}">
										<i class="fas fa-edit" inert></i>
									</button>
									<button type="button" class="link-button" data-action="delete"
									        data-tooltip="BF.Advancement.Core.Action.Delete"
									        aria-label="{{ localize 'BF.Advancement.Core.Action.Delete' }}">
										<i class="fas fa-trash" inert></i>
									</button>
								{{else}}
									<button type="button" class="link-button interface-only" data-action="view"
													data-tooltip="BF.Advancement.Core.Action.View"
													aria-label="{{ localize 'BF.Advancement.Core.Action.View' }}">
										<i class="fa-solid fa-eye" inert></i>
									</button>
								{{/if}}
							</div>
							{{#if this.summary}}
								<div class="advancement-summary">{{{ this.summary }}}</div>
							{{/if}}
						</li>
					{{/each}}
				</ol>
			</li>
		{{/each}}
	</ol>
</blackFlag-advancement>
