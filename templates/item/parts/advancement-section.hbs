<fieldset data-level="{{ level }}">
	<legend>
		{{#if (eq level "unconfigured")}}
			{{ localize "BF.Advancement.Core.Level.None" }}
		{{else if (eq level "0")}}
			{{ localize "BF.Advancement.Core.Level.Any.Long" }}
		{{else}}
			{{ localize "BF.Level.Specific" level=level }}
		{{/if}}
	</legend>

	<table class="fieldset-table">
		{{#each data.items}}
			<tbody class="draggable" data-advancement-id="{{ id }}">
				<tr>
					<td class="advancement-title">
						<div class="layout item-title">
							<img class="item-image" src="{{ icon }}" alt="{{ title }}">
							<span class="item-name">{{{ title }}}</span>
						</div>
					</td>
					<td class="class-restriction">
						{{#if (eq classRestriction "original")}}
							{{ localize "BF.Advancement.Core.ClassRestriction.Original" }}
						{{else if (eq classRestriction "multiclass")}}
							{{ localize "BF.Advancement.Core.ClassRestriction.Multiclass" }}
						{{/if}}
					</td>
					<td class="advancement-controls">
						<div class="layout">
							{{#if @root.editable}}
								<button type="button" class="link-button" data-action="edit"
												data-tooltip aria-label="{{ localize 'BF.Advancement.Core.Action.Edit' }}">
									<i class="fas fa-edit" inert></i>
								</button>
								<button type="button" class="link-button" data-action="delete"
												data-tooltip aria-label="{{ localize 'BF.Advancement.Core.Action.Delete' }}">
									<i class="fas fa-trash" inert></i>
								</button>
							{{else}}
								<button type="button" class="link-button interface-only" data-action="view"
												data-tooltip aria-label="{{ localize 'BF.Advancement.Core.Action.View' }}">
									<i class="fa-solid fa-eye" inert></i>
								</button>
							{{/if}}
						</div>
					</td>
				</tr>
				{{#if summary}}
					<tr>
						<td colspan="3" class="advancement-summary">
							{{{ summary }}}
						</td>
					</tr>
				{{/if}}
			</tbody>
		{{/each}}
	</table>
</fieldset>
