<div class="category">
	{{#if category}}
		{{ formField fields.type.fields.category value=source.type.category options=category.options
		             classes="label-top" localize=true rootId=partId }}
	{{/if}}
	{{#if type}}
		{{ formField fields.type.fields.value value=source.type.value options=type.options
		             classes="label-top" localize=true rootId=partId }}
	{{/if}}
	{{#if baseItem}}
		{{ formField fields.type.fields.base value=source.type.base options=baseItem.options
								 classes="label-top" localize=true rootId=partId }}
	{{/if}}
</div>
