<section>
	<div class="category">
		{{ formField fields.circle.fields.base value=source.circle.base options=spellCircleOptions
		             classes="label-top" label="BF.Spell.Circle.Label" localize=true rootId=partId }}
		<div class="form-group label-top">
			<label for="{{ partId }}-source">{{ localize "BF.Spell.Source.Label" }}</label>
			<div class="form-fields">
				<blackFlag-multiSelect name="system.source" label="{{ system.source.label }}">
					<datalist>
						{{#blackFlag-multiSelect system.source}}
							{{ selectOptions CONFIG.spellSources.localized }}
						{{/blackFlag-multiSelect}}
					</datalist>
				</blackFlag-multiSelect>
			</div>
		</div>
		{{ formField fields.school value=source.school options=CONFIG.spellSchools.localizedOptions
		             classes="label-top" localize=true rootId=partId }}
	</div>
</section>
