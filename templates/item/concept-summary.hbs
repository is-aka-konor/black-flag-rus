<figure class="poster">
	<img src="{{item.img}}"{{#if edit}} data-edit="img"{{/if}}>
	<h1 class="name">
		{{#if edit}}
			<input type="text" name="name" value="{{item.name}}" placeholder="{{localize 'Name'}}">
		{{else}}
			{{item.name}}
		{{/if}}
	</h1>
	{{#if (and edit (eq item.type "class"))}}
		<div class="color">
			<input name="system.color" type="color" value="{{system.color}}"
				title="{{localize 'BF.AccentColor.Label'}}" aria-label="{{localize 'BF.AccentColor.Label'}}">
		</div>
	{{/if}}
	<div class="source">
		{{#if edit}}
			<input type="text" name="system.description.source" value="{{system.description.source}}"
				placeholder="{{localize 'BF.Item.Source.Label'}}" aria-label="{{localize 'BF.Item.Source.Label'}}">
		{{else}}
			{{system.description.source}}
		{{/if}}
	</div>
	<div class="banner-mask" inert></div>
</figure>
<div class="info drop-target">
	<div class="description">
		{{#if edit}}
			{{editor enriched.description target="system.description.value" button=false
				editable=editable engine="prosemirror" collaborate=false}}
		{{else}}
			{{{enriched.description}}}
		{{/if}}
		<div class="drop-area journal-link">
			{{#if system.description.journal}}
				<p>
					<a class="content-link" data-uuid="{{system.description.journal}}">
						<i class="fa-solid fa-book-open"></i>
						{{localize "BF.Journal.Link.MoreInformation"}}
					</a>
					{{#if edit}}
						<a data-action="journal-link" data-sub-action="delete">
							<i class="fa-solid fa-trash"></i>
						</a>
					{{/if}}
				</p>
			{{else if edit}}
				<p class="hint">{{localize "BF.Journal.Link.DropArea"}}</p>
			{{/if}}
		</div>
	</div>
	<ul class="traits">
		{{#each system.traits as |trait|}}
			<li class="trait">
				{{localize trait.label}}: {{trait.value}}
			</li>
		{{/each}}
	</ul>
</div>
