<header class="sheet-header">
	<div class="icon">
		<img src="{{ ifThen editable img.editable img.value }}" alt="{{ name.value }}"
		     {{~#if editable}} data-action="editImage" data-edit="img"{{else}} data-action="showIcon"{{/if}}>
	</div>
	{{#if editable}}
		{{ formInput name.field value=name.editable classes="document-name" }}
	{{else}}
		<div class="document-name">{{ name.value }}</div>
	{{/if}}
</header>
