<fieldset>
		<legend>{{ localize "BF.CHECK.FIELDS.check.label" }}</legend>
		{{ formField systemFields.check.fields.associated name="system.check.associated"
		             value=source.system.check.associated options=associatedOptions }}
		{{ formField systemFields.check.fields.ability name="system.check.ability" value=source.system.check.ability
		             options=abilityOptions }}
		{{#with systemFields.check.fields.dc.fields as |fields|}}
			{{ formField fields.calculation name="system.check.dc.calculation" value=../source.system.check.dc.calculation
			             options=../calculationOptions }}
			{{#if (not ../source.system.check.dc.calculation)}}
				{{ formField fields.formula name="system.check.dc.formula" value=../source.system.check.dc.formula }}
			{{else}}
				{{ formField fields.formula value=(localize "BF.Formula.Default.DC") disabled=true }}
				<input type="hidden" name="check.dc.formula" value="{{ ../source.system.check.dc.formula }}">
			{{/if}}
		{{/with}}
		{{ formField systemFields.check.fields.visible name="system.check.visible" value=source.system.check.visible }}
</fieldset>
